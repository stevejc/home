<header class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
  		<a class= "brand" href="/">HomePlace</a>
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
			<div class="nav-collapse collapse">
			  <ul class="nav">
    				<li><%= link_to "About", about_path %></li>
  					<li><%= link_to "Contact Us", contact_us_path %></li>
  			</ul>	
  			<ul class="nav pull-right">
  			  <% if signed_in? %>
  			    <li><%= link_to "Profile", current_user %></li>
  			    <% if current_user.shop != nil %>
      			  <li id="fat-menu" class="dropdown">
        			  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Store <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Store", yourshop_path %></li>
                  <li><%= link_to "Items", youritems_path %></li>
                </ul>
      			  </li>
    			  <% else %>
        			  <li><%= link_to "Create a Store", new_shop_path %></li>
  			    <% end %>
  			    <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
  			  <% else %>
    			  <li><%= link_to "Register", signup_path %></li>
    			  <li><%= link_to "Sign In", signin_path %></li>
  			  <% end %>				  	
				  <li><%= link_to (content_tag(:i, "", :class=>"icon-shopping-cart")) + " Cart", cart_path(session[:cart_id]) %></li>
  			</ul>
			</div>
		</div>
	</div>
</header>

