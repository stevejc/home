<h1>Your Shop Item</h1>

<h3>Status: <%= @item.status %></h3>
<% if @item.status == "Pending" && @item.itemimages.exists? %>
  <%= link_to "List Item for Sale", list_for_sale_path(@item) %>
  <% end %>
<p><%= display_status_update(@item) %></p>

<table class="table">
  <tr>
    <td><b>Item:</b></td>
    <td>
      <%= @item.title %>
    </td>
  </tr> 

  <tr>
    <td><b>Description:</b></td>
    <td>
      <%= @item.description %>
    </td>
  </tr>
  
  <tr>
    <td><b>Price:</b></td>
    <td>
      <%= number_to_currency(@item.price) %>
    </td>
  </tr>
  
  <tr>
    <td><b>Quantity Available:</b></td>
    <td>
      <%= @item.quantity %>
    </td>
  </tr>
   
</table>

<div id="item-image-gallary">
  <ul id="pictures" data-update-url="<%= sort_itemimages_url %>">
    <% @item.itemimages.each do |picture| %>
      <li id="picture_<%= picture.id %>">
        <div class="image_lists">
          <%= image_tag(picture.image.index) %>
          <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<% if @item.itemimages.size < 5 %>
  <%= link_to "Add an Image", new_itemimage_path(:item_id => @item), :class => 'btn' %>
<% end %>
<%= link_to 'Back', items_path, :class => 'btn' %>
<%= link_to 'Edit', edit_item_path(@item), :class => 'btn' %>