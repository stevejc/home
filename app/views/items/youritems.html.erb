<h1>Items Index</h1>

<div class="row">
  <div class="span6">
  	<h3>Items</h3>
  </div>

</div>

<table class="table table-hover">
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
    

  </tr>

<% @items.each do |item| %>
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= item.quantity %></td>
<% end %>
</table>


<%= link_to "Add Item", new_item_path %>