<h1>Your Items Index</h1>

<div class="row">
  <div class="span6">
  	<h3>Items</h3>
  </div>

</div>

<table class="table table-hover">
  <tr>
    <th></th>
    <th>Item</th>
    <th>Description</th>
    <th>Price</th>
    <th>Quantity</th>
    

  </tr>

<% @items.each do |item| %>
  <tr data-link="<%= youritem_path(item) %>">
    <td><%= image_tag(item.itemimages.first.image, width: "48", height: "48") if item.itemimages.first.present? %></td>    
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= number_to_currency(item.price) %></td>
    <td><%= item.quantity %></td>
  </tr>
<% end %>
</table>


<%= link_to "Add Item", new_item_path, :class => 'btn' %>

