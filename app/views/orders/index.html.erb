<h1>My Orders</h1>

<div class="row">
  <div class="span6">
  	<h3>Orders</h3>
  </div>

</div>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Order Date</th>
  </tr>

<% @orders.each do |order| %>
  <tr data-link="<%= order_path(order) %>">
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.created_at %></td>
    
  </tr>
<% end %>
</table>