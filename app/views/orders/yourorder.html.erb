<h1>Shop Order Show</h1>

<table class="table">
  <tr>
    <td><b>Shop Name:</b></td>
    <td>
      <%= @order.name %>
    </td>
  </tr> 

  <tr>
    <td><b>Address:</b></td>
    <td>
      <%= @order.address %>
    </td>
  </tr>
  
  <tr>
    <td><b>Order Date:</b></td>
    <td>
      <%= (@order.created_at).strftime("%m/%d/%Y") %>
    </td>
  </tr>
   
</table>

<%= link_to 'Back', :back, :class => 'btn' %>