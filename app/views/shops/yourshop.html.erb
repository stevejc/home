<h1>Shop Show</h1>

<table class="table">
  <tr>
    <td><b>Shop Name:</b></td>
    <td>
      <%= @shop.name %>
    </td>
  </tr> 

  <tr>
    <td><b>City:</b></td>
    <td>
      <%= @shop.city %>
    </td>
  </tr>
  
  <tr>
    <td><b>State:</b></td>
    <td>
      <%= @shop.state %>
    </td>
  </tr>
  
  <tr>
    <td><b>Zip:</b></td>
    <td>
      <%= @shop.zip %>
    </td>
  </tr>
  
  <tr>
    <td><b>About:</b></td>
    <td>
      <%= @shop.about %>
    </td>
  </tr>
  
  <tr>
    <td><b>Refund Policy:</b></td>
    <td>
      <%= @shop.refund %>
    </td>
  </tr>
  
  <tr>
    <td><b>Shop owner photo:</b></td>
    <td>
      <%= image_tag @shop.image.thumb, { :class=>"shop_image"} %>
    </td>
  </tr>
  



     
</table>

